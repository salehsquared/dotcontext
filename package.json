{
  "name": "dotcontext",
  "version": "0.1.0",
  "description": "Folder-level documentation for LLMs â€” .context.yaml files for every directory",
  "type": "module",
  "bin": {
    "context": "./dist/index.js"
  },
  "author": "Saleh Mostafa",
  "repository": {
    "type": "git",
    "url": "https://github.com/salehsquared/dotcontext.git"
  },
  "homepage": "https://github.com/salehsquared/dotcontext",
  "bugs": {
    "url": "https://github.com/salehsquared/dotcontext/issues"
  },
  "files": [
    "dist",
    "grammars",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run generate:schemas && npm run build:grammars",
    "build:grammars": "node scripts/build-grammars.mjs",
    "generate:schemas": "node scripts/generate-schemas.mjs",
    "context:sync": "node scripts/sync-context-staged.mjs",
    "hooks:install": "node scripts/install-hooks.mjs",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "llm",
    "context",
    "documentation",
    "ai",
    "claude",
    "cursor",
    "copilot"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.3",
    "openai": "^6.21.0",
    "web-tree-sitter": "^0.26.5",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tree-sitter-cli": "^0.26.5",
    "tree-sitter-go": "^0.25.0",
    "tree-sitter-javascript": "^0.25.0",
    "tree-sitter-python": "^0.25.0",
    "tree-sitter-rust": "^0.24.0",
    "tree-sitter-typescript": "^0.23.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
